          <TextBlock Text="Settings are automatically saved and will take effect immediately or on next restart as needed." 
                     Foreground="#AAAAAA" FontSize="12" TextWrapping="Wrap" />
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</UserControl>
