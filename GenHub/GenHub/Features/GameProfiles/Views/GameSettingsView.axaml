<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GenHub.Features.GameProfiles.ViewModels"
             xmlns:conv="clr-namespace:GenHub.Infrastructure.Converters"
             xmlns:converters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="2800"
             x:Class="GenHub.Features.GameProfiles.Views.GameSettingsView"
             x:DataType="vm:GameSettingsViewModel">

    <UserControl.Resources>
        <conv:ThemeBackgroundConverter x:Key="ThemeBackgroundConverter" />
        <conv:ThemeBorderConverter x:Key="ThemeBorderConverter" />
        <conv:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <conv:EqualityConverter x:Key="EqualityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" MinWidth="0" />
        </Grid.ColumnDefinitions>
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0"
                Background="#10000000"
                BorderBrush="#20FFFFFF"
                BorderThickness="0,0,1,0"
                Padding="12,24">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="2">
                    <Button Classes="sidebar-btn"
                            Classes.selected="{Binding SelectedCategory, Converter={StaticResource EqualityConverter}, ConverterParameter={x:Static vm:SettingsCategory.Video}}"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="{x:Static vm:SettingsCategory.Video}">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="M21,16H3V4H21M21,2H3C1.89,2 1,2.89 1,4V16C1,17.11 1.89,18 3,18H10V20H8V22H16V20H14V18H21C22.11,18 23,17.11 23,16V4C23,2.89 22.11,2 21,2Z" />
                            <TextBlock Text="Video" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="sidebar-btn"
                            Classes.selected="{Binding SelectedCategory, Converter={StaticResource EqualityConverter}, ConverterParameter={x:Static vm:SettingsCategory.Audio}}"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="{x:Static vm:SettingsCategory.Audio}">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="M14,3.23V5.29C16.89,6.15 19,8.83 19,12C19,15.17 16.89,17.85 14,18.71V20.77C18,19.86 21,16.28 21,12C21,7.72 18,4.14 14,3.23M16.5,12C16.5,10.23 15.5,8.71 14,7.97V16.03C15.5,15.29 16.5,13.77 16.5,12M3,9V15H7L12,20V4L7,9H3Z" />
                            <TextBlock Text="Audio" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="sidebar-btn"
                            Classes.selected="{Binding SelectedCategory, Converter={StaticResource EqualityConverter}, ConverterParameter={x:Static vm:SettingsCategory.Controls}}"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="{x:Static vm:SettingsCategory.Controls}">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="M19,10H5A2,2 0 0,0 3,12V16A2,2 0 0,0 5,18H19A2,2 0 0,0 21,16V12C21,10.89 20.1,10 19,10M5,12H7V14H5V12M5,16V15H7V16H5M9,16V15H11V16H9M9,14V12H11V14H9M19,16H13V15H19V16M19,14H13V12H19V14Z" />
                            <TextBlock Text="Controls" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="sidebar-btn"
                            Classes.selected="{Binding SelectedCategory, Converter={StaticResource EqualityConverter}, ConverterParameter={x:Static vm:SettingsCategory.TheSuperHackers}}"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="{x:Static vm:SettingsCategory.TheSuperHackers}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="avares://GenHub/Assets/Logos/thesuperhackers-logo.png" Width="18" Height="18" />
                            <TextBlock Text="TheSuperHackers" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="sidebar-btn"
                            Classes.selected="{Binding SelectedCategory, Converter={StaticResource EqualityConverter}, ConverterParameter={x:Static vm:SettingsCategory.GeneralsOnline}}"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="{x:Static vm:SettingsCategory.GeneralsOnline}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="avares://GenHub/Assets/Logos/generalsonline-logo.png" Width="18" Height="18" />
                            <TextBlock Text="GeneralsOnline" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Resizer -->
        <GridSplitter Grid.Column="1" Background="Transparent" ResizeDirection="Columns" />

        <!-- Right Content Area -->
        <ScrollViewer x:Name="SettingsScrollViewer" Grid.Column="2" Padding="0,24,0,80" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" BringIntoViewOnFocusChange="False">
            <StackPanel Spacing="0" HorizontalAlignment="Stretch">
                <!-- Status Message -->
                <Border Background="{Binding ColorValue, Converter={StaticResource ThemeBackgroundConverter}, Mode=OneWay}"
                        BorderBrush="{Binding ColorValue, Converter={StaticResource ThemeBorderConverter}, Mode=OneWay}"
                        BorderThickness="1"
                        CornerRadius="8" Padding="12" Margin="24,0,24,24"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" FontSize="13" FontWeight="Medium" />
                </Border>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- VIDEO SECTION -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Control x:Name="VideoSection" Height="1" Margin="0,-1,0,0" />
                <Border Classes="settings-card">
                    <StackPanel Spacing="16">
                        <TextBlock Classes="section-header" Text="Video Settings" />

                        <Grid ColumnDefinitions="1* ,24 ,1*" Margin="0,0,0,12">
                            <StackPanel Grid.Column="0">
                                <TextBlock Classes="form-label" Text="Resolution" />
                                <ComboBox ItemsSource="{Binding ResolutionPresets}" SelectedItem="{Binding SelectedResolutionPreset}" HorizontalAlignment="Stretch" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Classes="form-label" Text="Detail Level (LOD)" />
                                <ComboBox ItemsSource="{Binding LodOptions}" SelectedItem="{Binding StaticGameLOD}" HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="1* ,24 ,1*" Margin="0,0,0,12" >
                            <StackPanel Grid.Column="0">
                                <TextBlock Classes="form-label" Text="Texture Quality" />
                                <ComboBox ItemsSource="{x:Static vm:GameSettingsViewModel.TextureQualityValues}" SelectedItem="{Binding TextureQuality}" HorizontalAlignment="Stretch" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Classes="form-label" Text="Brightness" />
                                <Grid ColumnDefinitions="*,Auto">
                                    <Slider Value="{Binding Gamma}" Minimum="0" Maximum="100" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <NumericUpDown Grid.Column="1" Value="{Binding Gamma}" Minimum="0" Maximum="100" Classes="slider-input" />
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="1* ,24 ,1*" Margin="0,0,0,12">
                            <StackPanel Grid.Column="0">
                                <TextBlock Classes="form-label" Text="Anti-Aliasing" />
                                <ComboBox ItemsSource="{Binding AaOptions}" SelectedItem="{Binding AntiAliasing}" HorizontalAlignment="Stretch" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Classes="form-label" Text="Max Particle Count" />
                                <Grid ColumnDefinitions="*,Auto">
                                    <Slider Value="{Binding MaxParticleCount}" Minimum="100" Maximum="10000" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <NumericUpDown Grid.Column="1" Value="{Binding MaxParticleCount}" Minimum="100" Maximum="10000" Increment="100" Classes="slider-input" />
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="1* ,24 ,1*" Margin="0,8,0,0">
                            <CheckBox Content="Windowed Mode" IsChecked="{Binding Windowed}" />
                            <CheckBox Grid.Column="2" Content="Dynamic LOD" IsChecked="{Binding DynamicLOD}" />
                        </Grid>

                        <!-- Section: Advanced Display Options (Conditional) -->
                        <StackPanel Spacing="0" IsVisible="{Binding IsCustomLodSelected}">
                            <Separator Background="#20FFFFFF" Height="1" Margin="0,8" />
                            <TextBlock Text="Advanced Display Options" FontWeight="SemiBold" FontSize="13" Opacity="0.8" Margin="0,0,0,12" />
                            <WrapPanel Orientation="Horizontal">
                                <CheckBox Content="3D Shadows" IsChecked="{Binding Shadows}" Margin="0,0,24,8" />
                                <CheckBox Content="2D Shadows" IsChecked="{Binding UseShadowDecals}" Margin="0,0,24,8" />
                                <CheckBox Content="Cloud Shadows" IsChecked="{Binding UseCloudMap}" Margin="0,0,24,8" />
                                <CheckBox Content="Extra Ground Lighting" IsChecked="{Binding UseLightMap}" Margin="0,0,24,8" />
                                <CheckBox Content="Smooth Water Borders" IsChecked="{Binding ShowSoftWaterEdge}" Margin="0,0,24,8" />
                                <CheckBox Content="Behind Buildings" IsChecked="{Binding BuildingOcclusion}" Margin="0,0,24,8" />
                                <CheckBox Content="Heat Effects" IsChecked="{Binding HeatEffects}" Margin="0,0,24,8" />
                                <CheckBox Content="Building Animations" IsChecked="{Binding BuildingAnimations}" Margin="0,0,24,8" />
                                <CheckBox Content="Extra Animations" IsChecked="{Binding ExtraAnimations}" Margin="0,0,24,8" />
                                <CheckBox Content="Particle Effects" IsChecked="{Binding ParticleEffects}" Margin="0,0,24,8" />
                                <CheckBox Content="Show Props" IsChecked="{Binding ShowProps}" Margin="0,0,24,8" />
                                <CheckBox Content="Show Trees" IsChecked="{Binding ShowTrees}" Margin="0,0,24,8" />
                            </WrapPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- AUDIO SECTION -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Control x:Name="AudioSection" Height="1" Margin="0,-1,0,0" />
                <Border Classes="settings-card">
                    <StackPanel Spacing="16">
                        <TextBlock Classes="section-header" Text="Audio Settings" />
                        <CheckBox Content="Audio Enabled" IsChecked="{Binding AudioEnabled}" FontWeight="SemiBold" Margin="0,0,0,8" />

                        <StackPanel IsEnabled="{Binding AudioEnabled}" Spacing="16">
                            <Grid ColumnDefinitions="140,*,Auto">
                                <TextBlock Text="Sound Volume" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding SoundVolume}" Minimum="0" Maximum="100" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding SoundVolume}" Minimum="0" Maximum="100" Classes="slider-input" />
                            </Grid>
                            <Grid ColumnDefinitions="140,*,Auto">
                                <TextBlock Text="3D Sound Volume" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding ThreeDSoundVolume}" Minimum="0" Maximum="100" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding ThreeDSoundVolume}" Minimum="0" Maximum="100" Classes="slider-input" />
                            </Grid>
                            <Grid ColumnDefinitions="140,*,Auto">
                                <TextBlock Text="Music Volume" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding MusicVolume}" Minimum="0" Maximum="100" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding MusicVolume}" Minimum="0" Maximum="100" Classes="slider-input" />
                            </Grid>
                            <Grid ColumnDefinitions="140,*,Auto">
                                <TextBlock Text="Speech Volume" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding SpeechVolume}" Minimum="0" Maximum="100" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding SpeechVolume}" Minimum="0" Maximum="100" Classes="slider-input" />
                            </Grid>

                            <Separator Background="#20FFFFFF" Height="1" />

                            <Grid ColumnDefinitions="140,*,Auto">
                                <TextBlock Text="Audio Channels" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding NumSounds}" Minimum="16" Maximum="64" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding NumSounds}" Minimum="16" Maximum="64" Classes="slider-input" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- CONTROLS SECTION -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Control x:Name="ControlsSection" Height="1" Margin="0,-1,0,0" />
                <Border Classes="settings-card">
                    <StackPanel Spacing="16">
                        <TextBlock Classes="section-header" Text="Controls" />

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" MinWidth="0" />
                                <ColumnDefinition Width="*" MinWidth="0" />
                                <ColumnDefinition Width="Auto" MinWidth="0" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Scroll Speed" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" Value="{Binding ScrollFactor}" Minimum="0" Maximum="200" VerticalAlignment="Center" Margin="0,0,12,0" />
                            <NumericUpDown Grid.Column="2" Value="{Binding ScrollFactor}" Minimum="0" Maximum="200" Classes="slider-input" />
                        </Grid>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <CheckBox Content="Alternate Mouse Setup" IsChecked="{Binding AlternateMouseSetup}" Margin="0,0,24,8" />
                            <CheckBox Content="Double-Click Attack" IsChecked="{Binding UseDoubleClickAttackMove}" Margin="0,0,24,8" />
                            <CheckBox Content="Auto Retaliation" IsChecked="{Binding Retaliation}" Margin="0,0,24,8" />
                            <CheckBox Content="Fast Send Delay" IsChecked="{Binding SendDelay}" Margin="0,0,24,8" />
                            <CheckBox Content="Draw Scroll Anchor" IsChecked="{Binding DrawScrollAnchor}" Margin="0,0,24,8" />
                            <CheckBox Content="Move Scroll Anchor" IsChecked="{Binding MoveScrollAnchor}" Margin="0,0,24,8" />
                            <CheckBox Content="Language Filter" IsChecked="{Binding LanguageFilter}" Margin="0,0,24,8" />
                        </WrapPanel>

                        <Separator Background="#20FFFFFF" Height="1" />

                        <Grid ColumnDefinitions="140,*,Auto">
                            <TextBlock Text="Game Time Font Size" VerticalAlignment="Center" />
                            <Slider Grid.Column="1" Value="{Binding GameTimeFontSize}" Minimum="8" Maximum="24" VerticalAlignment="Center" Margin="10,0,12,0" />
                            <NumericUpDown Grid.Column="2" Value="{Binding GameTimeFontSize}" Minimum="8" Maximum="24" Classes="slider-input" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- THE SUPER HACKERS SECTION -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Control x:Name="TheSuperHackersSection" Height="1" Margin="0,-1,0,0" />
                <Border Classes="settings-card">
                    <StackPanel Spacing="20">
                        <TextBlock Classes="section-header" Text="TheSuperHackers Client" />

                        <StackPanel Spacing="12">
                            <TextBlock Text="General Features" FontWeight="SemiBold" FontSize="13" Opacity="0.8" />
                            <WrapPanel HorizontalAlignment="Left">
                                <CheckBox Content="Archive Replays" IsChecked="{Binding TshArchiveReplays}" Margin="0,0,24,8" />
                                <CheckBox Content="Show Money/Min" IsChecked="{Binding TshShowMoneyPerMinute}" Margin="0,0,24,8" />
                                <CheckBox Content="Observer Mode" IsChecked="{Binding TshPlayerObserverEnabled}" Margin="0,0,24,8" />
                                <CheckBox Content="Skip Intro" IsChecked="{Binding SkipEALogo}" Margin="0,0,24,8" />
                            </WrapPanel>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <TextBlock Text="Cursor Capture" FontWeight="SemiBold" FontSize="12" Opacity="0.7" />
                            <WrapPanel HorizontalAlignment="Left">
                                <CheckBox Content="Fullscreen Game" IsChecked="{Binding TshCursorCaptureEnabledInFullscreenGame}" Margin="0,0,20,4" />
                                <CheckBox Content="Fullscreen Menu" IsChecked="{Binding TshCursorCaptureEnabledInFullscreenMenu}" Margin="0,0,20,4" />
                                <CheckBox Content="Windowed Game" IsChecked="{Binding TshCursorCaptureEnabledInWindowedGame}" Margin="0,0,20,4" />
                                <CheckBox Content="Windowed Menu" IsChecked="{Binding TshCursorCaptureEnabledInWindowedMenu}" Margin="0,0,20,4" />
                            </WrapPanel>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <TextBlock Text="Screen Edge Scroll" FontWeight="SemiBold" FontSize="12" Opacity="0.7" />
                            <WrapPanel HorizontalAlignment="Left">
                                <CheckBox Content="In Fullscreen" IsChecked="{Binding TshScreenEdgeScrollEnabledInFullscreenApp}" Margin="0,0,24,4" />
                                <CheckBox Content="In Windowed" IsChecked="{Binding TshScreenEdgeScrollEnabledInWindowedApp}" Margin="0,0,24,4" />
                            </WrapPanel>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <TextBlock Text="Interface Font Sizes" FontWeight="SemiBold" FontSize="12" Opacity="0.7" />
                            <Grid ColumnDefinitions="*,24,*" Margin="0,0,0,8">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="form-label" Text="System Time" />
                                    <NumericUpDown Value="{Binding TshSystemTimeFontSize}" Minimum="8" Maximum="32" HorizontalAlignment="Stretch" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Classes="form-label" Text="Ping Display" />
                                    <NumericUpDown Value="{Binding TshNetworkLatencyFontSize}" Minimum="8" Maximum="32" HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Grid>
                            <Grid ColumnDefinitions="*,24,*">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="form-label" Text="FPS Display" />
                                    <NumericUpDown Value="{Binding TshRenderFpsFontSize}" Minimum="8" Maximum="32" HorizontalAlignment="Stretch" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Classes="form-label" Text="Resolution Font Offset" />
                                    <NumericUpDown Value="{Binding TshResolutionFontAdjustment}" Minimum="-500" Maximum="500" HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Grid>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <Grid ColumnDefinitions="140,*,Auto">
                                <TextBlock Text="Transaction Volume" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding TshMoneyTransactionVolume}" Minimum="0" Maximum="100" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding TshMoneyTransactionVolume}" Minimum="0" Maximum="100" Classes="slider-input" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- GENERALS ONLINE SECTION -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Control x:Name="GeneralsOnlineSection" Height="1" Margin="0,-1,0,0" />
                <Border Classes="settings-card">
                    <StackPanel Spacing="20">
                        <TextBlock Classes="section-header" Text="GeneralsOnline Engine" />

                        <StackPanel Spacing="12">
                            <TextBlock Text="Identity &amp; Login" FontWeight="SemiBold" FontSize="13" Opacity="0.8" />
                            <WrapPanel HorizontalAlignment="Left">
                                <CheckBox Content="Auto-Login" IsChecked="{Binding GoAutoLogin}" Margin="0,0,24,8" />
                                <CheckBox Content="Remember Me" IsChecked="{Binding GoRememberUsername}" Margin="0,0,24,8" />
                                <CheckBox Content="Show Ranks" IsChecked="{Binding GoShowPlayerRanks}" Margin="0,0,24,8" />
                            </WrapPanel>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <TextBlock Text="Performance &amp; Visuals" FontWeight="SemiBold" FontSize="13" Opacity="0.8" />
                            <WrapPanel HorizontalAlignment="Left">
                                <CheckBox Content="FPS Cap" IsChecked="{Binding GoRenderLimitFramerate}" Margin="0,0,24,8" />
                                <CheckBox Content="Stats Overlay" IsChecked="{Binding GoRenderStatsOverlay}" Margin="0,0,24,8" />
                                <CheckBox Content="Show Ping" IsChecked="{Binding GoShowPing}" Margin="0,0,24,8" />
                                <CheckBox Content="Show FPS" IsChecked="{Binding GoShowFps}" Margin="0,0,24,8" />
                                <CheckBox Content="Verbose Logging" IsChecked="{Binding GoDebugVerboseLogging}" Margin="0,0,24,8" />
                            </WrapPanel>

                            <Grid ColumnDefinitions="140,*,Auto" IsEnabled="{Binding GoRenderLimitFramerate}">
                                <TextBlock Text="Engine FPS Limit" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding GoRenderFpsLimit}" Minimum="30" Maximum="500" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding GoRenderFpsLimit}" Minimum="30" Maximum="500" Classes="slider-input" />
                            </Grid>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <TextBlock Text="Camera Settings" FontWeight="SemiBold" FontSize="13" Opacity="0.8" />
                            <Grid ColumnDefinitions="140,*,Auto" Margin="0,0,0,8">
                                <TextBlock Text="Min Camera Height" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding GoCameraMinHeight}" Minimum="50" Maximum="1000" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding GoCameraMinHeight}" Minimum="50" Maximum="1000" Classes="slider-input" />
                            </Grid>
                            <Grid ColumnDefinitions="140,*,Auto" Margin="0,0,0,8">
                                <TextBlock Text="Max Camera Height" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding GoCameraMaxHeightOnlyWhenLobbyHost}" Minimum="50" Maximum="1000" VerticalAlignment="Center" Margin="0,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding GoCameraMaxHeightOnlyWhenLobbyHost}" Minimum="50" Maximum="1000" Classes="slider-input" />
                            </Grid>
                            <Grid ColumnDefinitions="140,*,Auto">
                                <TextBlock Text="Camera Move Speed" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Value="{Binding GoCameraMoveSpeedRatio}" Minimum="0.5" Maximum="5.0" VerticalAlignment="Center" Margin="10,0,12,0" />
                                <NumericUpDown Grid.Column="2" Value="{Binding GoCameraMoveSpeedRatio}" Minimum="0.5" Maximum="5.0" Increment="0.1" Classes="slider-input" />
                            </Grid>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <TextBlock Text="Social &amp; Notifications" FontWeight="SemiBold" FontSize="13" Opacity="0.8" />
                            <WrapPanel HorizontalAlignment="Left" Margin="0,0,0,8">
                                <CheckBox Content="Global Notifications" IsChecked="{Binding GoEnableNotifications}" Margin="0,0,24,4" />
                                <CheckBox Content="Sound Notifications" IsChecked="{Binding GoEnableSoundNotifications}" Margin="0,0,24,4" />
                            </WrapPanel>

                            <Grid ColumnDefinitions="*,24,*">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="form-label" Text="Chat Font Size" />
                                    <NumericUpDown Value="{Binding GoChatFontSize}" Minimum="8" Maximum="32" HorizontalAlignment="Stretch" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Classes="form-label" Text="Chat Fadeout (s)" />
                                    <NumericUpDown Value="{Binding GoChatDurationSecondsUntilFadeOut}" Minimum="5" Maximum="300" HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Detailed Notifications" FontSize="12" Opacity="0.6" Margin="0,8,0,4" />
                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <CheckBox Content="Friend Online (In-Game)" IsChecked="{Binding GoSocialNotificationFriendComesOnlineGameplay}" />
                                    <CheckBox Content="Friend Offline (In-Game)" IsChecked="{Binding GoSocialNotificationFriendGoesOfflineGameplay}" />
                                    <CheckBox Content="Accept (In-Game)" IsChecked="{Binding GoSocialNotificationPlayerAcceptsRequestGameplay}" />
                                    <CheckBox Content="Request (In-Game)" IsChecked="{Binding GoSocialNotificationPlayerSendsRequestGameplay}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <CheckBox Content="Friend Online (Menu)" IsChecked="{Binding GoSocialNotificationFriendComesOnlineMenus}" />
                                    <CheckBox Content="Friend Offline (Menu)" IsChecked="{Binding GoSocialNotificationFriendGoesOfflineMenus}" />
                                    <CheckBox Content="Accept (Menu)" IsChecked="{Binding GoSocialNotificationPlayerAcceptsRequestMenus}" />
                                    <CheckBox Content="Request (Menu)" IsChecked="{Binding GoSocialNotificationPlayerSendsRequestMenus}" />
                                </StackPanel>
                            </Grid>

                            <Separator Background="#15FFFFFF" Height="1" Margin="0,4" />

                            <StackPanel Spacing="8">
                                <TextBlock Classes="form-label" Text="GameSpy IP Override" />
                                <TextBox Text="{Binding GameSpyIPAddress}" Watermark="e.g. 127.0.0.1" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Panel Height="200" /> <!-- Bottom Spacer -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
