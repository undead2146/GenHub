<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light theme colors -->
    <Color x:Key="WindowBackgroundLight">#F7F7F9</Color>
    <Color x:Key="TitleBarBackgroundLight">#EAEAEF</Color>
    <Color x:Key="SidebarBackgroundLight">#F0F0F4</Color>
    <Color x:Key="DetailsBackgroundLight">#FFFFFF</Color>
    <Color x:Key="StatusBarBackgroundLight">#EAEAEF</Color>
    <Color x:Key="TreeViewBackgroundLight">#FFFFFF</Color>
    <Color x:Key="BorderBrushLight">#D0D0D8</Color>
    <Color x:Key="ComboBoxBackgroundLight">#FFFFFF</Color>
    <Color x:Key="TextBoxBackgroundLight">#FFFFFF</Color>
    <Color x:Key="ButtonBackgroundLight">#F0F0F4</Color>
    <Color x:Key="PrimaryButtonBackgroundLight">#7C4DFF</Color>

    <!-- Dark theme colors -->
    <Color x:Key="WindowBackgroundDark">#1F1F1F</Color>
    <Color x:Key="TitleBarBackgroundDark">#2A2A2A</Color>
    <Color x:Key="SidebarBackgroundDark">#252525</Color>
    <Color x:Key="DetailsBackgroundDark">#2D2D2D</Color>
    <Color x:Key="StatusBarBackgroundDark">#2A2A2A</Color>
    <Color x:Key="TreeViewBackgroundDark">#303030</Color>
    <Color x:Key="BorderBrushDark">#404040</Color>
    <Color x:Key="ComboBoxBackgroundDark">#3A3A3A</Color>
    <Color x:Key="TextBoxBackgroundDark">#3A3A3A</Color>
    <Color x:Key="ButtonBackgroundDark">#3A3A3A</Color>
    <Color x:Key="PrimaryButtonBackgroundDark">#7C4DFF</Color>

    <!-- Default theme resources -->
    <!-- Using dark theme colors as application default -->
    <SolidColorBrush x:Key="WindowBackground" Color="{DynamicResource WindowBackgroundDark}" />
    <SolidColorBrush x:Key="TitleBarBackground" Color="{DynamicResource TitleBarBackgroundDark}" />
    <SolidColorBrush x:Key="TitleBarForeground" Color="White" />
    <SolidColorBrush x:Key="SidebarBackground" Color="{DynamicResource SidebarBackgroundDark}" />
    <SolidColorBrush x:Key="DetailsBackground" Color="{DynamicResource DetailsBackgroundDark}" />
    <SolidColorBrush x:Key="MainContentBackground" Color="{DynamicResource WindowBackgroundDark}" />
    <SolidColorBrush x:Key="StatusBarBackground" Color="{DynamicResource StatusBarBackgroundDark}" />
    <SolidColorBrush x:Key="StatusBarForeground" Color="White" />
    <SolidColorBrush x:Key="EmptyStateForeground" Color="White" />
    <SolidColorBrush x:Key="TreeViewBackground" Color="{DynamicResource TreeViewBackgroundDark}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderBrushDark}" />
    <SolidColorBrush x:Key="ComboBoxBackground" Color="{DynamicResource ComboBoxBackgroundDark}" />
    <SolidColorBrush x:Key="TextBoxBackground" Color="{DynamicResource TextBoxBackgroundDark}" />
    <SolidColorBrush x:Key="ButtonBackground" Color="{DynamicResource ButtonBackgroundDark}" />
    <SolidColorBrush x:Key="PrimaryButtonBackground" Color="{DynamicResource PrimaryButtonBackgroundDark}" />
    <SolidColorBrush x:Key="PrimaryButtonForeground" Color="White" />
    <SolidColorBrush x:Key="CardBackground" Color="#333333" />
    <SolidColorBrush x:Key="AccentColor" Color="#7C4DFF" />

    <!-- New theme resources for consistency -->
    <Color x:Key="WarningColor">#FFA500</Color>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />

    <Color x:Key="PrimaryGradientStart">#E040FB</Color>
    <Color x:Key="PrimaryGradientEnd">#7C4DFF</Color>
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0%,0%" EndPoint="100%,100%">
        <GradientStop Color="{StaticResource PrimaryGradientStart}" Offset="0" />
        <GradientStop Color="{StaticResource PrimaryGradientEnd}" Offset="1" />
    </LinearGradientBrush>

    <Color x:Key="CheckBoxCheckedColor">#AA00FF</Color>
    <SolidColorBrush x:Key="CheckBoxCheckedBrush" Color="{StaticResource CheckBoxCheckedColor}" />

    <StreamGeometry x:Key="CheckmarkIcon">M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z</StreamGeometry>
    <StreamGeometry x:Key="WarningIcon">M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z</StreamGeometry>
    <StreamGeometry x:Key="ConfirmationCheckIcon">M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z</StreamGeometry>
    <Color x:Key="SystemAccentColor">#5E35B1</Color>
    <SolidColorBrush x:Key="SystemAccentColorBrush" Color="{StaticResource SystemAccentColor}"/>

    <!-- Glassmorphic Sidebar Colors - FIXED: High Transparency & Blue/Purple Only -->
    <Color x:Key="SidebarGlassBackground">#CC050510</Color> <!-- 80% opacity Dark Blue-Black (Solid Backdrop) -->
    <Color x:Key="SidebarGlassBorder">#334527A0</Color> <!-- 20% Opacity Dark Purple Border (Subtle) -->
    <Color x:Key="SidebarGlowColor">#664527A0</Color> <!-- Subtle Glow -->

    <!-- Pure Blue-Purple Palette (NO PINK) -->
    <Color x:Key="PurpleAccentDark">#311B92</Color> <!-- Deep Dark Purple (Material Deep Purple 900) -->
    <Color x:Key="PurpleAccentMid">#4527A0</Color> <!-- Dark Purple (Material Deep Purple 800) -->
    <Color x:Key="PurpleAccentBright">#673AB7</Color> <!-- Medium Purple (Material Deep Purple 500) -->
    <Color x:Key="PurpleGlow">#804527A0</Color>

    <!-- Sidebar Gradients - Strong Backdrop -->
    <LinearGradientBrush x:Key="SidebarBackgroundGradient" StartPoint="0%,0%" EndPoint="100%,100%">
        <GradientStop Color="#CC050510" Offset="0" />
        <GradientStop Color="#E60A0A1A" Offset="1" /> <!-- Almost solid at bottom -->
    </LinearGradientBrush>

    <!-- "Blue to Purple" Gradient (No Pink) -->
    <LinearGradientBrush x:Key="PurpleAccentGradient" StartPoint="0%,0%" EndPoint="100%,100%">
        <GradientStop Color="#311B92" Offset="0" />   <!-- Deep Dark Purple -->
        <GradientStop Color="#673AB7" Offset="1" />   <!-- Medium Purple -->
    </LinearGradientBrush>

    <!-- Hover and Selection States -->
    <SolidColorBrush x:Key="SidebarItemHoverBinding" Color="#1AFFFFFF" /> <!-- Renamed to avoid confusion if needed, keeping Value same -->
    <SolidColorBrush x:Key="SidebarItemHoverBackground" Color="#1AFFFFFF" />
    <SolidColorBrush x:Key="SidebarItemSelectedBackground" Color="#4D4527A0" /> <!-- Dark Purple glass -->
    <SolidColorBrush x:Key="SidebarItemHoverBorder" Color="Transparent" />
    <SolidColorBrush x:Key="SidebarItemSelectedBorder" Color="#673AB7" /> <!-- Medium Purple Border -->
</ResourceDictionary>